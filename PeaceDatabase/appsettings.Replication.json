{
  "Sharding": {
    "Enabled": true,
    "Mode": "Local",
    "ShardCount": 3,
    "HashAlgorithm": "MurmurHash3",
    "RequestTimeoutSeconds": 30,
    "RetryCount": 3,
    "Discovery": {
      "Type": "Static",
      "ServicePrefix": "peacedb-shard-",
      "Port": 8080,
      "RefreshIntervalSeconds": 30
    },
    "Replication": {
      "Enabled": true,
      "ReplicaCount": 2,
      "WriteQuorum": 2,
      "ReadQuorum": 1,
      "FailoverTimeoutMs": 5000,
      "HealthCheckIntervalMs": 3000,
      "MaxReplicationLagMs": 10000,
      "UnhealthyThreshold": 3,
      "SyncMode": "Quorum",
      "ReadLoadBalancing": true
    },
    "ReplicaSets": [
      {
        "ShardId": 0,
        "Primary": "http://localhost:5010",
        "Replicas": ["http://localhost:5011", "http://localhost:5012"]
      },
      {
        "ShardId": 1,
        "Primary": "http://localhost:5020",
        "Replicas": ["http://localhost:5021", "http://localhost:5022"]
      },
      {
        "ShardId": 2,
        "Primary": "http://localhost:5030",
        "Replicas": ["http://localhost:5031", "http://localhost:5032"]
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "PeaceDatabase.Storage.Sharding.Replication": "Debug"
    }
  }
}

